= form_for @video_clip do |f|
  -if @video_clip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video_clip.errors.count, "error")} prohibited this video_clip from being saved:"
      %ul
        - @video_clip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :youtube_video_id
    = f.text_field :youtube_video_id
  .field
    = f.label :start_seconds
    = f.text_field :start_seconds
  .field
    = f.label :end_seconds
    = f.text_field :end_seconds
  .actions
    = f.submit 'Save'
